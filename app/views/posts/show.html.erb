<div class="card p-2">
    <div>
        <h2 class="text-start">Post: <%= "##{@post.id + 1} by #{@post.user.name}" %></h2>
        <p class="text-end"> Comments: <%= @comments.length %> Likes: <%= @likes.length %></p>
    </div>
    <%= @post.text %>
</div>

<div class="card mt-4">
    <% if @comments.length > 0 %>
    <% @comments.each do |comment| %>
        <div class="p-2">
            <p><%= comment.user.name %>: <%= comment.text %></p>
        </div>
    <% end %>
</div>
    <% else %>
        No comment yet
    <% end %>
